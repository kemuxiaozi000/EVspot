<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
        <div class="box box-info">
            <div class="box-body">
              <div id="info_message" class="callout callout-info" style="display: none;"></div>
              <div id="warning_message" class="callout callout-warning" style="display: none;"></div>
              <form role="form" id="supplier_edit_form" data-toggle="validator" onsubmit="return false;">
                <table class="col-lg-12">
                    <tr>
                        <td class="col-lg-1">
                            <h4 class="pull-right">供給者ID</h4>
                        </td>
                        <td class="col-lg-1">
                            <input Id="id" class="form-control" type="number" placeholder="id" required></input>
                        </td>
                        <td class="col-lg-1">
                            <h4 class="pull-right">供給者名</h4>
                        </td>
                        <td class="col-lg-1">
                            <input Id="name" class="form-control" type="text" placeholder="名称" required></input>
                        </td>
                        <td class="col-lg-1">
                            <h4 class="pull-right">電源種別</h4>
                        </td>
                        <td class="col-lg-1">
                            <select class="form-control" id="poewrSupplySelect" name="poewrSupply" required>
                                <option></option>
                                <% for power in @power_supply do %>
                                    <option value="<%= power['id'] %>"><%= power['name'] %></option>
                                <% end %>
                            </select>
                        </td>
                        <td class="col-lg-1">
                            <h4 class="pull-right">充電単価</h4>
                        </td>
                        <td class="col-lg-1">
                            <input Id="value" class="form-control" type="text" placeholder="500" required></input>
                        </td>
                        <td class="col-lg-1">
                            <h4 class="pull-right">産地</h4>
                        </td>
                        <td class="col-lg-1">
                            <input Id="producingArea" class="form-control" type="text" placeholder="生産地" required></input>
                        </td>
                    </tr>
                    <tr>
                        <td class="col-lg-1">
                            <h4 class="pull-right">由来</h4>
                        </td>
                        <td class="col-lg-1">
                            <input id="origin" type="text" class="form-control" placeholder="例：太陽光">
                        </td>
                        <td class="col-lg-1">
                            <h4 class="pull-right">コメント①</h4>
                        </td>
                        <td class="col-lg-3" colspan="3">
                            <input id="comment" type="text" class="form-control" placeholder="購入前表示コメント">
                        </td>
                        <td class="col-lg-1">
                            <h4 class="pull-right">コメント②</h4>
                        </td>
                        <td class="col-lg-3" colspan="3">
                            <input id="thanksComment" type="text" class="form-control" placeholder="購入後表示コメント">
                        </td>
                        <td class="col-lg-2">
                          <div class="btn-group pull-right">
                            <button type="submit" class="btn btn-success">
                              <span class="glyphicon glyphicon-ok"></span>
                            </button>
                            <button type="reset" class="btn btn-default">クリア</button>
                          </div>
                        </td>
                    </tr>
                </table>
            </form>
            </div>
          </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
        <div class="box box-info">
            <%= javascript_tag do %>
              window.data = <%= raw @suppliers.to_json %>;
              window.powerSupplyData = <%= raw @power_supply.to_json %>;
            <% end %>

            <div class="box-header">
                <p>供給者一覧</p>
            </div>
            <div class="box-body">
                <%= render "suppliers_edit/result" %>
            </div>
        </div>
    </div>
  </div>
</div>
