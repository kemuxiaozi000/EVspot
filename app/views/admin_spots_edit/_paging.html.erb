<div class="box-footer clearfix">
  <%= "#{@page}/#{@spot_size}Page" %>
  <ul class="pagination pagination-sm no-margin pull-right">
    <li><%= link_to('First',"/admin_spots_edit/1") %></li>
    <% if @page.to_i > 5 %>
      <li><%= link_to('«',"/admin_spots_edit/#{@page.to_i-5}") %></li>
    <%end%>
    <% if 3 < @page.to_i && @page.to_i < 6 %>
      <li><%= link_to('«',"/admin_spots_edit/1") %></li>
    <%end%>
    <% if @page.to_i > 2 %>
      <li><%= link_to(@page.to_i-2,"/admin_spots_edit/#{@page.to_i-2}") %></li>
    <%end%>
    <% if @page.to_i > 1 %>
      <li><%= link_to(@page.to_i-1,"/admin_spots_edit/#{@page.to_i-1}") %></li>
    <%end%>
    <li><%= link_to('['+@page.to_s+']','#') %></li>
    <% if @page.to_i < @spot_size.to_i %>
      <li><%= link_to(@page.to_i+1,"/admin_spots_edit/#{@page.to_i+1}") %></li>
    <%end%>
    <% if @page.to_i < @spot_size.to_i-1 %>
      <li><%= link_to(@page.to_i+2,"/admin_spots_edit/#{@page.to_i+2}") %></li>
    <%end%>
    <% if @page.to_i < 3 && @page.to_i < @spot_size.to_i-2 %>
      <li><%= link_to(@page.to_i+3,"/admin_spots_edit/#{@page.to_i+3}") %></li>
    <%end%>
    <% if @page.to_i < 2 && @page.to_i < @spot_size.to_i-3 %>
      <li><%= link_to(@page.to_i+4,"/admin_spots_edit/#{@page.to_i+4}") %></li>
    <%end%>
    <% if @page.to_i < @spot_size.to_i-4 %>
      <li><%= link_to('»',"/admin_spots_edit/#{@page.to_i+5}") %></li>
    <%end%>
    <% if @spot_size.to_i-5 < @page.to_i && @page.to_i < @spot_size.to_i-2%>
      <li><%= link_to('»',"/admin_spots_edit/#{@spot_size}") %></li>
    <%end%>
    <li><%= link_to('Last',"/admin_spots_edit/#{@spot_size}") %></li>
  </ul>
</div>