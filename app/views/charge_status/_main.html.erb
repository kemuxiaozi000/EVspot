<div class="content">
  <div class="col-xs-12">
    <div class="box box-success">
      <div class="box-header">
        <h2 class="box-title">充電中...</h2>
      </div>
      <div class="box-body">
        <h3 id="charging_time" class="text-center"></h3>
        <div class="text-center">
          <img src='<%= asset_path 'charging.gif' %>' alt="充電中...">
        </div>
      </div>
      <div class="box-footer">
        <button id="spot_info" class="btn btn-block btn-info">スポット情報</button>
        <button type="button" id="stop_charging" class="btn btn-block btn-success">充電をやめる</button>
        <%= javascript_tag do %>
          var spot_id = <%= params[:spot_id] %>
        <% end %>
      </div>
    </div>
  </div>
</div>
